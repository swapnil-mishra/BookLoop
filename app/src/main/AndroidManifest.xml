<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mypackage.bookloop">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_bl_logo_v2"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_bl_logo_v2_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BookLoop">
        <activity android:name=".ResetPassword" android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar"></activity>
        <activity android:name=".EditBookDetails" />
        <activity android:name=".MyUploads" />
        <activity android:name=".MyProfileActivity" />
        <activity android:name=".BookDetails" />
        <activity android:name=".Upload_NewBook" />
        <activity android:name=".SignUpActivity" android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar"/>
        <activity android:name=".MainActivity" />
        <activity android:name=".Login_Activity" android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar"/>
        <activity android:name=".Splash" android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>